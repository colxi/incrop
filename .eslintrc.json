{
    "env": {
        "browser": true,
        "es6": true,
        "node" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "plugins": [
    ],
    "rules": {
        "no-constant-condition" : "off",
        "no-unused-vars" : "warn",
        "no-console": "off",
        "no-mixed-spaces-and-tabs" :  "warn",
        "indent": [
            "warn",
            "tab",
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "always",
            {"omitLastInOneLineBlock" : true}
        ]
    }
}
